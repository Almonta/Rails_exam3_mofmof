<%= form_with(model: @property, local: true ) do |form| %>
  <div class="property">
    <%= form.label :property_name, '物件名' %><br>
    <%= form.text_field :property_name %><br>
    <%= form.label :rent, '賃料' %><br>
    <%= form.text_field :rent %>円 <br>
    <%= form.label :address, '住所' %><br>
    <%= form.text_field :address %><br>
    <%= form.label :age, '築年数' %><br>
    <%= form.text_field :age %>年<br>
    <%= form.label :remarks, '備考' %><br>
    <%= form.text_area :remarks %><br>
  </div>

  <hr>

  <p>最寄り駅1</p>
  <%= form.fields_for :nearest_stations do |m| %>
    <div class="nearest_station">
      <%= m.label :route_name, '路線名' %><br>
      <%= m.text_field :route_name %><br>
      <%= m.label :station_name, '駅名' %><br>
      <%= m.text_field :station_name %><br>
      <%= m.label :time, '徒歩分数' %><br>
      <%= m.text_field :time %><br>

    </div>
    
    <p>最寄り駅2</p>

    <% end %>
  <%= form.submit button_text %>
<% end %>

